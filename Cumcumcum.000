<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SNAKE X - Game r·∫Øn sƒÉn m·ªìi th·∫ø h·ªá m·ªõi</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .game-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        .game-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            color: white;
            padding: 0 10px;
        }

        .score-box {
            background: rgba(255,255,255,0.2);
            padding: 10px 25px;
            border-radius: 50px;
            font-size: 24px;
            font-weight: bold;
            position: relative;
            overflow: hidden;
        }

        .score-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shine 2s infinite;
        }

        @keyframes shine {
            to {
                left: 100%;
            }
        }

        .high-score {
            background: rgba(255,215,0,0.3);
            padding: 10px 25px;
            border-radius: 50px;
            font-size: 20px;
            border: 1px solid gold;
        }

        canvas {
            border: 3px solid rgba(255,255,255,0.3);
            border-radius: 10px;
            display: block;
            margin: 0 auto;
            background: rgba(0,0,0,0.2);
            box-shadow: 0 0 30px rgba(0,0,0,0.5);
        }

        .game-controls {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        button {
            background: linear-gradient(45deg, #FE6B8B 30%, #FF8E53 90%);
            border: 0;
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            border: 1px solid rgba(255,255,255,0.3);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }

        button:active {
            transform: translateY(0);
        }

        .direction-pad {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            max-width: 200px;
            margin: 20px auto 0;
        }

        .dir-btn {
            padding: 15px;
            font-size: 20px;
            background: rgba(255,255,255,0.15);
            border: 1px solid rgba(255,255,255,0.3);
        }

        .dir-btn:active {
            background: rgba(255,255,255,0.3);
        }

        .game-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .game-overlay.active {
            display: flex;
        }

        .overlay-content {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            color: white;
            animation: slideIn 0.5s;
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .overlay-content h2 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .overlay-content p {
            font-size: 24px;
            margin-bottom: 30px;
        }

        .power-ups {
            display: flex;
            gap: 15px;
            margin-top: 15px;
            justify-content: center;
        }

        .power-up {
            background: rgba(255,255,255,0.2);
            padding: 8px 15px;
            border-radius: 50px;
            font-size: 14px;
            border: 1px solid rgba(255,255,255,0.3);
        }

        .instruction {
            color: white;
            text-align: center;
            margin-top: 15px;
            font-size: 14px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="game-container">
        <div class="game-header">
            <div class="score-box">ƒêi·ªÉm: <span id="score">0</span></div>
            <div class="high-score">üèÜ K·ª∑ l·ª•c: <span id="highScore">0</span></div>
        </div>
        
        <canvas id="gameCanvas" width="600" height="600"></canvas>
        
        <div class="power-ups">
            <span class="power-up">‚≠ê T·ªëc ƒë·ªô: <span id="speedLevel">1</span>x</span>
            <span class="power-up">üí´ K√≠ch th∆∞·ªõc: <span id="sizeLevel">1</span>x</span>
        </div>
        
        <div class="game-controls">
            <button id="startBtn">‚ñ∂ B·∫Øt ƒë·∫ßu</button>
            <button id="pauseBtn">‚è∏ T·∫°m d·ª´ng</button>
            <button id="resetBtn">üîÑ Ch∆°i l·∫°i</button>
        </div>
        
        <div class="direction-pad">
            <button class="dir-btn" id="upBtn">‚Üë</button>
            <button class="dir-btn" id="leftBtn">‚Üê</button>
            <button class="dir-btn" id="downBtn">‚Üì</button>
            <button class="dir-btn" id="rightBtn">‚Üí</button>
        </div>
        
        <div class="instruction">
            D√πng ph√≠m m≈©i t√™n ho·∫∑c b·∫•m n√∫t ƒë·ªÉ ƒëi·ªÅu khi·ªÉn ‚Ä¢ Thu th·∫≠p sao ƒë·ªÉ tƒÉng k√≠ch th∆∞·ªõc v√† t·ªëc ƒë·ªô
        </div>
    </div>

    <div class="game-overlay" id="gameOverlay">
        <div class="overlay-content">
            <h2>GAME OVER</h2>
            <p>ƒêi·ªÉm s·ªë: <span id="finalScore">0</span></p>
            <button id="restartBtn">Ch∆°i l·∫°i</button>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        // K√≠ch th∆∞·ªõc √¥
        const gridSize = 20;
        const tileCount = canvas.width / gridSize;
        
        let snake = [
            {x: 10, y: 10}
        ];
        let direction = {x: 0, y: 0};
        let food = {};
        let specialFood = null;
        let score = 0;
        let highScore = localStorage.getItem('snakeHighScore') || 0;
        let gameRunning = false;
        let gamePaused = false;
        let speed = 100;
        let speedLevel = 1;
        let sizeLevel = 1;
        
        document.getElementById('highScore').textContent = highScore;
        
        // T·∫°o th·ª©c ƒÉn th∆∞·ªùng
        function generateFood() {
            food = {
                x: Math.floor(Math.random() * tileCount),
                y: Math.floor(Math.random() * tileCount)
            };
            
            // Tr√°nh ƒë·∫∑t th·ª©c ƒÉn l√™n r·∫Øn
            for (let segment of snake) {
                if (segment.x === food.x && segment.y === food.y) {
                    generateFood();
                    break;
                }
            }
        }
        
        // T·∫°o th·ª©c ƒÉn ƒë·∫∑c bi·ªát (20% c∆° h·ªôi)
        function generateSpecialFood() {
            if (Math.random() < 0.2 && !specialFood) {
                specialFood = {
                    x: Math.floor(Math.random() * tileCount),
                    y: Math.floor(Math.random() * tileCount),
                    type: Math.random() < 0.5 ? 'speed' : 'size'
                };
                
                // Tr√°nh ƒë·∫∑t l√™n r·∫Øn ho·∫∑c th·ª©c ƒÉn th∆∞·ªùng
                for (let segment of snake) {
                    if (segment.x === specialFood.x && segment.y === specialFood.y || 
                        (food.x === specialFood.x && food.y === specialFood.y)) {
                        specialFood = null;
                        generateSpecialFood();
                        break;
                    }
                }
            }
        }
        
        // V·∫Ω game
        function draw() {
            // X√≥a canvas
            ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // V·∫Ω l∆∞·ªõi
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.05)';
            ctx.lineWidth = 1;
            for (let i = 0; i <= tileCount; i++) {
                ctx.beginPath();
                ctx.moveTo(i * gridSize, 0);
                ctx.lineTo(i * gridSize, canvas.height);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(0, i * gridSize);
                ctx.lineTo(canvas.width, i * gridSize);
                ctx.stroke();
            }
            
            // V·∫Ω th·ª©c ƒÉn th∆∞·ªùng
            ctx.fillStyle = '#ff6b6b';
            ctx.shadowColor = '#ff6b6b';
            ctx.shadowBlur = 15;
            ctx.beginPath();
            ctx.arc(food.x * gridSize + gridSize/2, food.y * gridSize + gridSize/2, gridSize/2 - 2, 0, Math.PI * 2);
            ctx.fill();
            
            // V·∫Ω th·ª©c ƒÉn ƒë·∫∑c bi·ªát
            if (specialFood) {
                ctx.shadowBlur = 20;
                if (specialFood.type === 'speed') {
                    ctx.fillStyle = '#4ecdc4';
                    ctx.shadowColor = '#4ecdc4';
                } else {
                    ctx.fillStyle = '#ffe66d';
                    ctx.shadowColor = '#ffe66d';
                }
                ctx.beginPath();
                ctx.arc(specialFood.x * gridSize + gridSize/2, specialFood.y * gridSize + gridSize/2, gridSize/2 - 2, 0, Math.PI * 2);
                ctx.fill();
                
                // V·∫Ω bi·ªÉu t∆∞·ª£ng
                ctx.fillStyle = 'white';
                ctx.font = '16px Arial';
                ctx.textAlign = 'center';
                ctx.textBaseline = 'middle';
                ctx.shadowBlur = 0;
                ctx.fillText(specialFood.type === 'speed' ? '‚ö°' : '‚≠ê', 
                           specialFood.x * gridSize + gridSize/2, 
                           specialFood.y * gridSize + gridSize/2);
            }
            
            // V·∫Ω r·∫Øn
            for (let i = 0; i < snake.length; i++) {
                const segment = snake[i];
                
                // Hi·ªáu ·ª©ng gradient cho r·∫Øn
                const gradient = ctx.createRadialGradient(
                    segment.x * gridSize + gridSize/2,
                    segment.y * gridSize + gridSize/2,
                    0,
                    segment.x * gridSize + gridSize/2,
                    segment.y * gridSize + gridSize/2,
                    gridSize/2
                );
                
                if (i === 0) {
                    // ƒê·∫ßu r·∫Øn
                    gradient.addColorStop(0, '#4CAF50');
                    gradient.addColorStop(1, '#45a049');
                } else {
                    gradient.addColorStop(0, '#81C784');
                    gradient.addColorStop(1, '#66BB6A');
                }
                
                ctx.fillStyle = gradient;
                ctx.shadowColor = '#4CAF50';
                ctx.shadowBlur = 10;
                
                // V·∫Ω ƒëo·∫°n th√¢n v·ªõi g√≥c bo tr√≤n
                ctx.beginPath();
                ctx.roundRect(segment.x * gridSize + 2, segment.y * gridSize + 2, 
                            gridSize - 4, gridSize - 4, 5);
                ctx.fill();
                
                // V·∫Ω m·∫Øt cho ƒë·∫ßu r·∫Øn
                if (i === 0) {
                    ctx.fillStyle = 'white';
                    ctx.shadowBlur = 0;
                    ctx.beginPath();
                    ctx.arc(segment.x * gridSize + gridSize/2 - 4, 
                           segment.y * gridSize + gridSize/2 - 4, 3, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.beginPath();
                    ctx.arc(segment.x * gridSize + gridSize/2 + 4, 
                           segment.y * gridSize + gridSize/2 - 4, 3, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.fillStyle = 'black';
                    ctx.beginPath();
                    ctx.arc(segment.x * gridSize + gridSize/2 - 4, 
                           segment.y * gridSize + gridSize/2 - 4, 1.5, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.beginPath();
                    ctx.arc(segment.x * gridSize + gridSize/2 + 4, 
                           segment.y * gridSize + gridSize/2 - 4, 1.5, 0, Math.PI * 2);
                    ctx.fill();
                }
            }
            
            ctx.shadowBlur = 0;
        }
        
        // Helper function cho roundRect
        CanvasRenderingContext2D.prototype.roundRect = function(x, y, w, h, r) {
            if (w < 2 * r) r = w / 2;
            if (h < 2 * r) r = h / 2;
            this.moveTo(x + r, y);
            this.lineTo(x + w - r, y);
            this.quadraticCurveTo(x + w, y, x + w, y + r);
            this.lineTo(x + w, y + h - r);
            this.quadraticCurveTo(x + w, y + h, x + w - r, y + h);
            this.lineTo(x + r, y + h);
            this.quadraticCurveTo(x, y + h, x, y + h - r);
            this.lineTo(x, y + r);
            this.quadraticCurveTo(x, y, x + r, y);
            this.closePath();
            return this;
        };
        
        // C·∫≠p nh·∫≠t game
        function update() {
            if (!gameRunning || gamePaused) return;
            
            // Di chuy·ªÉn ƒë·∫ßu r·∫Øn
            const head = {x: snake[0].x + direction.x, y: snake[0].y + direction.y};
            
            // X·ª≠ l√Ω va ch·∫°m t∆∞·ªùng (xuy√™n t∆∞·ªùng)
            if (head.x < 0) head.x = tileCount - 1;
            if (head.x >= tileCount) head.x = 0;
            if (head.y < 0) head.y = tileCount - 1;
            if (head.y >= tileCount) head.y = 0;
            
            // Ki·ªÉm tra va ch·∫°m v·ªõi th√¢n
            for (let segment of snake) {
                if (head.x === segment.x && head.y === segment.y) {
                    gameOver();
                    return;
                }
            }
            
            snake.unshift(head);
            
            // Ki·ªÉm tra ƒÉn th·ª©c ƒÉn th∆∞·ªùng
            if (head.x === food.x && head.y === food.y) {
                score += 10;
                document.getElementById('score').textContent = score;
                generateFood();
                generateSpecialFood();
                
                // C·∫≠p nh·∫≠t k·ª∑ l·ª•c
                if (score > highScore) {
                    highScore = score;
                    localStorage.setItem('snakeHighScore', highScore);
                    document.getElementById('highScore').textContent = highScore;
                }
            } else {
                snake.pop();
            }
            
            // Ki·ªÉm tra ƒÉn th·ª©c ƒÉn ƒë·∫∑c bi·ªát
            if (specialFood && head.x === specialFood.x && head.y === specialFood.y) {
                if (specialFood.type === 'speed') {
                    speedLevel = Math.min(speedLevel + 0.2, 3);
                    speed = Math.max(50, 100 / speedLevel);
                    document.getElementById('speedLevel').textContent = speedLevel.toFixed(1);
                } else {
                    sizeLevel = Math.min(sizeLevel + 0.2, 2);
                    // Th√™m 2 ƒëo·∫°n thay v√¨ 1
                    const lastSegment = snake[snake.length - 1];
                    snake.push({x: lastSegment.x, y: lastSegment.y});
                    snake.push({x: lastSegment.x, y: lastSegment.y});
                    document.getElementById('sizeLevel').textContent = sizeLevel.toFixed(1);
                }
                score += 20;
                document.getElementById('score').textContent = score;
                specialFood = null;
                generateSpecialFood();
            }
            
            draw();
        }
        
        function gameOver() {
            gameRunning = false;
            document.getElementById('finalScore').textContent = score;
            document.getElementById('gameOverlay').classList.add('active');
        }
        
        function resetGame() {
            snake = [{x: 10, y: 10}];
            direction = {x: 0, y: 0};
            score = 0;
            speedLevel = 1;
            sizeLevel = 1;
            speed = 100;
            specialFood = null;
            document.getElementById('score').textContent = '0';
            document.getElementById('speedLevel').textContent = '1';
            document.getElementById('sizeLevel').textContent = '1';
            generateFood();
            draw();
            gameRunning = false;
            gamePaused = false;
            document.getElementById('pauseBtn').textContent = '‚è∏ T·∫°m d·ª´ng';
        }
        
        // Kh·ªüi t·∫°o
        generateFood();
        draw();
        
        // X·ª≠ l√Ω ph√≠m
        document.addEventListener('keydown', (e) => {
            if (!gameRunning) return;
            
            switch(e.key) {
                case 'ArrowUp':
                    if (direction.y === 0) {
                        direction = {x: 0, y: -1};
                    }
                    break;
                case 'ArrowDown':
                    if (direction.y === 0) {
                        direction = {x: 0, y: 1};
                    }
                    break;
                case 'ArrowLeft':
                    if (direction.x === 0) {
                        direction = {x: -1, y: 0};
                    }
                    break;
                case 'ArrowRight':
                    if (direction.x === 0) {
                        direction = {x: 1, y: 0};
                    }
                    break;
            }
        });
        
        // Event listeners cho buttons
        document.getElementById('startBtn').addEventListener('click', () => {
            if (!gameRunning) {
                if (direction.x === 0 && direction.y === 0) {
                    direction = {x: 1, y: 0};
                }
                gameRunning = true;
                gamePaused = false;
                document.getElementById('pauseBtn').textContent = '‚è∏ T·∫°m d·ª´ng';
                gameLoop();
            }
        });
        
        document.getElementById('pauseBtn').addEventListener('click', () => {
            if (gameRunning) {
                gamePaused = !gamePaused;
                document.getElementById('pauseBtn').textContent = 
                    gamePaused ? '‚ñ∂ Ti·∫øp t·ª•c' : '‚è∏ T·∫°m d·ª´ng';
                if (!gamePaused) {
                    gameLoop();
                }
            }
        });
        
        document.getElementById('resetBtn').addEventListener('click', resetGame);
        document.getElementById('restartBtn').addEventListener('click', () => {
            document.getElementById('gameOverlay').classList.remove('active');
            resetGame();
        });
        
        // Direction pad
        document.getElementById('upBtn').addEventListener('click', () => {
            if (gameRunning && direction.y === 0) direction = {x: 0, y: -1};
        });
        document.getElementById('downBtn').addEventListener('click', () => {
            if (gameRunning && direction.y === 0) direction = {x: 0, y: 1};
        });
        document.getElementById('leftBtn').addEventListener('click', () => {
            if (gameRunning && direction.x === 0) direction = {x: -1, y: 0};
        });
        document.getElementById('rightBtn').addEventListener('click', () => {
            if (gameRunning && direction.x === 0) direction = {x: 1, y: 0};
        });
        
        function gameLoop() {
            if (!gameRunning || gamePaused) return;
            
            update();
            setTimeout(gameLoop, speed);
        }
        
        // Responsive canvas
        function resizeCanvas() {
            const container = canvas.parentElement;
            const size = Math.min(600, window.innerWidth - 100);
            canvas.width = size;
            canvas.height = size;
            draw();
        }
        
        window.addEventListener('resize', resizeCanvas);
    </script>
</body>
</html>
